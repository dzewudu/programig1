//intdatatype
#include<iostream>
#include<iostream>
using namespace std;
int main()
{
int mynum=5;//integer
cout << "mynum="<<mynum<<endl;//output
return 0;
}

//floatdatatype
#include<iostream>
#include<iostream>
using namespace std;
int main()
{
float  mynum=5.65;//floatingnumberpoint
cout << "mynum="<<mynum<<endl;//output
return 0;
}
//double datatype
#include<iostream>
#include<iostream>
using namespace std;
int main()
{
double mynum=19.99;
cout << "mynum="<<mynum<<endl;//output
return 0;
}

//character datatype
