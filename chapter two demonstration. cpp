}
//assignment operator
#include<iostream>
using namespace std;
int main()
{
int a,b,c;
a=10;
b=4;
c=a+b;
cout<<"the value of c="<<c<<endl;
return 0;
}

//assignment operator
 #include<iostream>
using namespace std;
int main()
{
int a,b;
a=12;
b=4;
cout<<"a:";
cout<<a;
cout<<"b:";
cout<<b;
return 0;
}

 //compound assignment operator 
#include<iostream>
using namespace std;
int main()
{
int a,b=3;
a+=2;
cout<<a;
return 0;
}


