}
//c++output
#include<iostream>
using namespace std;
int main()
{
cout << "Hello World\n"; //print hello world
return 0; 
}

//C++comment
#include<iostream>
using namespace std;
int main() {
cout<<"hello world"; //printtheword hello world
return 0;
}
