//programtofindthecercmferenceofcricle
#include<iostream>
using namespace std;
int main()
{
int circumference , radius;
{
cout << "Enter the radius of circle:";
cin >> radius;
circumference = 3.14*3.14*radius;
cout << "circumference of circle: " << circumference << endl;
}
return 0;
}

4,exercise 
//programtotherootsofthequadraticequastion
#include<iostream>
#include<conio.h>
#include<math.h>
using namespace std;
int main()
{
float a,b,c,x1,x2;
cout<<"entervaluesofa,b,c:";
cin>>a;
cin>>b;
cin>>c;
float d=(b*b)-(4*a*c);
if(d==0)
{
x1=x2=(-b/2*a);
cout<<"rootsarereal&equalx1=x2"<<x1;
}
else if(d>0)
{
x1=((-b)+sqrt(d)/(2*a));
x2=((-b)-sqrt(d)/(2*a));
cout<<"roots are x1="<<x1<<"x2="<<x2;
}
else
{
cout<<"roots are imaginar";
}
 return 0;
}





